{
    "compilerOptions": {
        "isolatedModules": true,
        "lib": [
            "dom",
            "es2021"
        ],
        "rootDir": "./src",
        "outDir": "./dist",
        "esModuleInterop": true,
        "module": "ES2022",
        "declaration": true,
        "noImplicitAny": true,
        "moduleResolution" : "Node",
        "noImplicitReturns": true,
        "noUnusedLocals": false,
        "noUnusedParameters": true,
        "sourceMap": true,
        "strict": true,
        "target": "ES2022",
    }
}